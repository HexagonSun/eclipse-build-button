<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Build Buttons"
            id="net.hexagon.sun.eclipse.bb.commands.category">
      </category>
      <command
            name="Build Command Single"
            categoryId="net.hexagon.sun.eclipse.bb.commands.category"
            id="net.hexagon.sun.eclipse.bb.commands.singleBuild">
      </command>
      <command
            categoryId="net.hexagon.sun.eclipse.bb.commands.category"
            id="net.hexagon.sun.eclipse.bb.commands.fullBuild"
            name="Build Command Full">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="net.hexagon.sun.eclipse.bb.handlers.SingleBuild"
            commandId="net.hexagon.sun.eclipse.bb.commands.singleBuild">
      </handler>
      <handler
            class="net.hexagon.sun.eclipse.bb.handlers.FullBuild"
            commandId="net.hexagon.sun.eclipse.bb.commands.fullBuild">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="net.hexagon.sun.eclipse.bb.commands.singleBuild"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            commandId="net.hexagon.sun.eclipse.bb.commands.fullBuild"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="net.hexagon.sun.eclipse.bb.toolbars.buildButtonBar">
            <command
                  commandId="net.hexagon.sun.eclipse.bb.commands.singleBuild"
                  icon="icons/brick-single16.png"
                  id="net.hexagon.sun.eclipse.bb.toolbars.singleBuild"
                  tooltip="Build single project">
            </command>
            <command
                  commandId="net.hexagon.sun.eclipse.bb.commands.fullBuild"
                  icon="icons/brick-wall16.png"
                  tooltip="Build All"
                  id="net.hexagon.sun.eclipse.bb.toolbars.fullBuild">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
